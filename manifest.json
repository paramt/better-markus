{
    "manifest_version": 3,
    "name": "Better MarkUs",
    "description": "Improve MarkUs UI",
    "version": "1.1",
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },


    "content_scripts": [
        {
          "js": ["content.js"],
          "matches": ["https://markus.student.cs.uwaterloo.ca/*"]
        }
    ],
	
	"web_accessible_resources": [{
		"resources": ["widgets/markbox.html"],
		"matches": ["https://markus.student.cs.uwaterloo.ca/*"]
	}]
      
}